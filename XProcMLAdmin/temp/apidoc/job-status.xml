<xs:schema targetNamespace="http://marklogic.com/xdmp/job-status" xsi:schemaLocation="http://www.w3.org/2001/XMLSchema XMLSchema.xsd" attributeFormDefault="unqualified" elementFormDefault="unqualified" xmlns="http://marklogic.com/xdmp/job-status" xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <xs:simpleType name="status">
    <xs:restriction base="xs:NMTOKEN">
      <xs:enumeration value="queued"/>
      <xs:enumeration value="in-progress"/>
      <xs:enumeration value="failed"/>
      <xs:enumeration value="canceled"/>
      <xs:enumeration value="completed"/>
      <xs:enumeration value="unknown"/>
    </xs:restriction>
  </xs:simpleType>
  <xs:element name="forest-name" type="xs:string" abstract="false" nillable="false">
    <xs:annotation>
      <xs:documentation>
  	The name of the forest.
      </xs:documentation>
      <xs:appinfo>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>
  <xs:element name="forest-id" type="xs:unsignedLong" abstract="false" nillable="false">
    <xs:annotation>
      <xs:documentation>
  	The forest ID.
      </xs:documentation>
      <xs:appinfo>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>
  <xs:element name="status" type="status" abstract="false" nillable="false">
    <xs:annotation>
      <xs:documentation>
	      The status of the forest backup.  The status is one of: "queued", 
	      "in-progress", "failed", "canceled", completed", or "unknown".
      </xs:documentation>
      <xs:appinfo>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>
  <xs:complexType name="forest" mixed="false" abstract="false">
    <xs:all minOccurs="1" maxOccurs="1">
      <xs:element ref="forest-name" minOccurs="1" maxOccurs="1"/>
      <xs:element ref="forest-id" minOccurs="1" maxOccurs="1"/>
      <xs:element ref="status" minOccurs="1" maxOccurs="1"/>
    </xs:all>
  </xs:complexType>
  <xs:element name="forest" type="forest" abstract="false" nillable="false">
    <xs:annotation>
      <xs:documentation>
	      The forest being backed up.  There is one forest element for each
	      forest in the backup.
      </xs:documentation>
      <xs:appinfo>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>
  <xs:complexType name="job-status" mixed="false" abstract="false">
    <xs:choice minOccurs="0" maxOccurs="unbounded">
      <xs:element ref="forest" minOccurs="1" maxOccurs="1"/>
    </xs:choice>
  </xs:complexType>
  <xs:element name="job-status" type="job-status" abstract="false" nillable="false">
    <xs:annotation>
      <xs:documentation>
  	The status of a backup job.
      </xs:documentation>
      <xs:appinfo>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>
</xs:schema>
